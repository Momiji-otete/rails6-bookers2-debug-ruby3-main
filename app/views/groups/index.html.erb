<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: Book.new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Group</h2>
  		<table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>メンバー数</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |group| %>
            <tr>
              <td><%= image_tag group.get_group_image, size:'50x50' %></td>
              <td><%= link_to group.name, group_path(group.id) %></td>
              <td><%= group.group_users.count %></td>
              <td><%= link_to 'Show', group_path(group.id), class: "group_#{group.id}" %></td>
              <% if current_user.id == group.owner_id %>
              <td><%= link_to "Edit", edit_group_path(group.id), class:"btn btn-sm btn-success group_#{group.id}" %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
