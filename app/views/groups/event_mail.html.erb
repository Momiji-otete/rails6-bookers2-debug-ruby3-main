<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Event Mail</h2>
      <%= form_with url: group_send_email_path(@group), method: :get do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :email_title, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :email_body, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "送信", class:"btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
