<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>

      <h3>投稿数の前日比・前週比</h3>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>今日の投稿数</th>
            <th>前日の投稿数</th>
            <th>前日比</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @data['today'] %></td>
            <td><%= @data['yesterday'] %></td>
            <% unless @data['yesterday'] == 0 %>
            <td><%= @rate_yesterday %>%</td>
            <% else %>
            <td>前日のデータがありません</td>
            <% end %>
          </tr>
        </tbody>
      </table>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>今週の投稿数</th>
            <th>前週の投稿数</th>
            <th>前週比</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @data['this_week'] %></td>
            <td><%= @data['last_week'] %></td>
            <% unless @data['last_week'] == 0 %>
            <td><%= @rate_last_week %>%</td>
            <% else %>
            <td>前週のデータがありません</td>
            <% end %>
          </tr>
        </tbody>
      </table>

      <h3>7日間分の投稿数</h3>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>6日前</th>
            <th>5日前</th>
            <th>4日前</th>
            <th>3日前</th>
            <th>2日前</th>
            <th>1日前</th>
            <th>今日</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @data['6days_ago'] %></td>
            <td><%= @data['5days_ago'] %></td>
            <td><%= @data['4days_ago'] %></td>
            <td><%= @data['3days_ago'] %></td>
            <td><%= @data['2days_ago'] %></td>
            <td><%= @data['yesterday'] %></td>
            <td><%= @data['today'] %></td>
          </tr>
        </tbody>
      </table>

      <canvas id="myChart"></canvas>
      <!--<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>-->
      <script>
        $(document).on('turbolinks:load', function () {
          var ctx = document.getElementById("myChart");
          var myChart = new Chart(ctx, {
            type: 'line',
            data: {
              labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],
              datasets: [{
                label: '投稿した本の数',
                data: [
                  <%= @data['6days_ago'] %>,
                  <%= @data['5days_ago'] %>,
                  <%= @data['4days_ago'] %>,
                  <%= @data['3days_ago'] %>,
                  <%= @data['2days_ago'] %>,
                  <%= @data['yesterday'] %>,
                  <%= @data['today'] %>
                ],
                borderColor: "rgba(0,0,255,1)",
                backgroundColor: "rgba(0,0,0,0)"
              }],
            },
            options: {
              plugins: {
                title: {
                  display: true,
                  text: '7日間の投稿数の比較'
                },
              },
              responsive: true,
              scales: {
                y: {
                  suggestedMin: 0,
                  suggestedMax: 10,
                  stepSize: 1
                },
                x: {
                  stacked: true
                },
              },
            }
          });
        });
      </script>

      <div>
        <%= form_with url: user_search_books_path(@user), local: false, method: :get do |f| %>
          <%= f.date_field :created_at %>
          <%= f.submit "検索", class:"btn btn-primary btn-sm" %>
        <% end %>
      </div>

      <div class="search-result">
        <% if @search_books.present? %>
          <%= render "search_books", search_books: @search_books %>
        <% end %>
      </div>
    </div>
  </div>
</div>
